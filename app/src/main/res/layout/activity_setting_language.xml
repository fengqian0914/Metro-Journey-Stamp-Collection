<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Setting.Language.Setting_Language">

    <LinearLayout
        android:id="@+id/data_bar"
        style="@style/main_bg_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/goback"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:src="@drawable/baseline_chevron_left_24" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/BackGround_LightWhite_NightBlack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/setting_language_title"
            style="@style/TextColor_LightBlack_NightWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/setting_language_title"
            android:textSize="30dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radio_language_Group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton_zh"
                style="@style/TextColor_LightBlack_NightWhite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/setting_language_radio_selector"
                android:button="@color/transparent"
                android:checked="true"
                android:drawableLeft="@drawable/flag_zh"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="繁體中文(Traditional Chinese)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton_cn"
                style="@style/TextColor_LightBlack_NightWhite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/setting_language_radio_selector"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/flag_cn"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="简体中文(Simplified Chinese)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton_us"
                style="@style/TextColor_LightBlack_NightWhite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/setting_language_radio_selector"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/flag_us"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="English(United States)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton_jp"
                style="@style/TextColor_LightBlack_NightWhite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/setting_language_radio_selector"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/flag_jp"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="日本語(Japanese)"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton_ko"
                style="@style/TextColor_LightBlack_NightWhite"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/setting_language_radio_selector"
                android:button="@color/transparent"
                android:drawableLeft="@drawable/flag_ko"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="한국어(Korean)"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_change_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/main_color"
            android:text="@string/setting_language_btn"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>